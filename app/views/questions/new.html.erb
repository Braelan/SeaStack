
<% if flash.now[:errors] %>
<% flash.now[:errors].each do |error| %>
<%=  error %>
   <% end %>
<% end %>

<form name="f" action=" <%= questions_url %>" method= "POST">
  <input type="hidden"
  name="authenticity_token"
  value=" <%= form_authenticity_token %>">
  <h1> Ask a Question </h1>
  <label for="question_title">Title </label>

  <input type="text" name="question[title]" id="question_title">

  <label for="question_body">Body </label>
  <textarea name="question[body]" id="question_body"></textarea>

  <label for="tags">Tags</label>
  <input type= "text" name="Tag[tags]" id="question_tags">
  <input type="checkbox" name="question[response_notification]" value="true">
  notify me via email when there are new responses
  </input>
  <br>
  <button type="submit">Post Question</button>

</form>
