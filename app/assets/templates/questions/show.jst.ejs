<section class="questions-show">




<br>
<h1>
<%= question.escape("title") %>
</h1>
<br>
<h2> <%= question.escape("body") %> </h2>
<br>
<img src="<%= question.escape("filepicker_url") %>"> </img>
<br>
<br>
<h2> Comments: </h2>
  <% question.comments().each( function(comment) {%>
  <%= comment.escape("body") %>
  <% }); %>

  <h1>Answer:</h1>
  <i class= "answers">
    <% question.answers().each( function(answer) {%>
    <p class=answer> <%= answer.escape("body") %> </p><br>
    <% }); %>
  </i>
<br>
<p></p>
<div class="answerForm"> </div>
