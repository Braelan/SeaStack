<section class="questions-show">




<br>
<h1>
<form id="upvote">
  <input type="hidden" name="question_id" value="<%= question.escape("id") %>">
  <input type="hidden" name="value" value="<%= true %>">
  <button class="vote">UP</button>
</form>
<form id="downvote">
  <button class="vote">DOWN</button>
  <input type="hidden" name="question_id" value="<%= question.escape("id") %>">
  <input type="hidden" name="value" value="<%= false %>">
</form>
<%= question.escape("votes") %>
<%= question.escape("title") %>
</h1>
<br>
<h2> <%= question.escape("body") %> </h2>
<br>
<% if (question.escape("filepicker_url").slice(0,5) === "https") { %>
<img src="<%= question.escape("filepicker_url") %>"> </img>
<% } %>
<br>
<br>
  <i class= "answers">
<h2> Comments: </h2>
  <% question.comments().each( function(comment) {%>
  <%= comment.escape("body") %> <br>
  <% }); %>

  <h1>Answer:</h1>
  <i class= "answers">
    <% question.answers().each( function(answer) {%>
    <p class=answer> <%= answer.escape("body") %> </p><br>
    <% }); %>
  </i>
<br>
<p></p>
<div class="answerForm"> </div>
<div class="commentForm"></div>
</section>
